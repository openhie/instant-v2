    "version": "0.2.0",
    "configurations": [
        {
            "name": "Init logstash",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["package", "init", "--dev", "--only", "-n=data-mapper-logstash", "-e=.env.local"]
        },
        {
            "name": "Remove logstash",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["package", "remove", "--only", "-n=data-mapper-logstash"]
        },
    ]
}
